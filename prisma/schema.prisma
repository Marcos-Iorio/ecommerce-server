generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

enum Role {
  ADMIN
  USER
}

model users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  city     String
  role     Role
  country  String
  mail     String   @unique
  name     String
  password String
  street   String
  orders   orders[]
}

model products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  name        String
  description String
  main_image  String
  images      String[]
  stock       Int
  price       Int
}

model orders {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user_name   String
  mail        String
  products    String[]
  total_price Int
  orderAt     DateTime
  address     String
  user        users    @relation(fields: [mail], references: [mail])
}
