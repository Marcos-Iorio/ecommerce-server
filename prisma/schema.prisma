generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

enum Role {
  ADMIN
  USER
}

model Users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  city     String
  role     Role
  country  String
  email    String   @unique
  name     String
  password String
  street   String
  orders   Orders[]
}

model Products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  name        String
  description String
  main_image  String
  images      String[]
  stock       Int
  price       Int
  orders      Orders?  @relation(fields: [ordersId], references: [id])
  ordersId    String?  @db.ObjectId
}

model Orders {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  order_id        String     @unique
  user_name       String
  email           String
  products        Products[]
  total_price     Int
  order_timestamp DateTime
  status          String
  address         String
  user            Users      @relation(fields: [email], references: [email])
}
