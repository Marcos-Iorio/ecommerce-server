generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

enum Role {
  ADMIN
  USER
}

model users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  city     String
  role     Role
  country  String
  email     String   @unique
  name     String
  password String
  street   String
  orders   orders[]
}

model products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  name        String
  description String
  main_image  String
  images      String[]
  stock       Int
  price       Int
}

model orders {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  order_id String
  user_name   String
  email        String
  products    String[]
  total_price Int
  order_timestamp     DateTime
  status OrderStatus @default(PENDING)
  address     String
  user        users    @relation(fields: [email], references: [email])
}

enum OrderStatus {
  PENDING
  APPROVED
  CANCELED
}